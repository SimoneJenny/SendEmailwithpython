#open with pycharm newest version

#import os
from email.message import EmailMessage
import ssl
import smtplib

email_sender='adreamer.sh@gmail.com'
#2 step varification
email_password='Princessogcosmo#020122'
#OS file. email_password = os.environ.get("Email_password')
email_reciever='simonekhlive.dk'

subject ='item ideas'
body="""
dear user, we couldnt find any specfic math.
please take a look at the 3 mathing items and pick one. 
"""

em=EmailMessage()
em['From']=email_sender
em['To'] = email_reciever
em['Subject']=subject
em.set_content(body)
context = ssl.create_default_context()
#send email secure
with smtplib.SMTP_SSL('smtp.gmail.com', 464, context=context) as smtp:
    smtp.login(email_sender, email_password)
    smtp.sendmail(email_sender, email_reciever, em.as_string())
